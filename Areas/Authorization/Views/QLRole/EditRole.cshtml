@model QLPreschool.ModelViews.RoleMV
@{
    ViewData["Title"] = "Chỉnh Sửa Role";
}
<h1>@ViewData["Title"]</h1>
<partial name="_StatusMessage" />
<div class="row">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-md-6">
        <form method="post" asp-action="EditRole" asp-controller="QLRole" asp-area="Authorization">
            <input value="@ViewBag.roleid" name="roleid" hidden/>
            <div class="form-group">
                <label asp-for="@Model.Name" class="form-label"></label>
                <input asp-for="@Model.Name" class="form-control">
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-success">Lưu</button>
                <a asp-action="Index" asp-controller="QLRole" asp-area="Authorization" class="btn btn-success">Danh sách các Roles</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}