@model QLPreschool.Areas.Authorization.Controllers.QLRoleGVController.MyViewModel
@{
    ViewData["Title"] = "Thêm role";
}
<h1>@ViewData["Title"] - @ViewBag.User.UserName</h1>
<partial name="_StatusMessage" />
<div class="row mt-3">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input name="userid" value="@ViewBag.User.Id" hidden/>
            <div class="form-group mb-3">
               @Html.ListBoxFor(m => m.RoleNames, ViewBag.RollAll as SelectList, new
                    {
                        id = "id-select-role",
                        @class = "bg-white w-100"
                    }) 
            </div>
            <button type="submit" class=" btn btn-md btn-primary">Lưu lại</button>
            <a asp-action="Index" class="btn btn-md btn-primary">Danh sách user</a>
        </form>
        <hr>
        
    </div>
</div>
@section Scripts {
    <script src="https://unpkg.com/multiple-select@1.7.0/dist/multiple-select.min.js"></script>
    <script>
        $("#id-select-role").multipleSelect({
            selectAll: false,
            isOpen:false,
            keepOpen:false,
            placeholder: "Vui lòng chọn Role"
        })
    </script>
}
@section Style {
    <link rel="stylesheet" href="https://unpkg.com/multiple-select@1.7.0/dist/multiple-select.min.css">
}