@model QLPreschool.ModelViews.PhieuLienLacMV
@{
    ViewData["Title"] = "Nhập Phiếu Liên Lạc";
}

<h3 class="text-center text-capitalize">Nhập lời nhận xét cho bé tháng @DateTime.Now.Month - năm @DateTime.Now.Year</h3>

<form class="container-fluid pt-4 px-4" method="post"
      asp-action="NhapPhieuLienLac" asp-controller="GiaoVienPT" asp-area="GiaoVien">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="@Model.MaTe" value="@ViewBag.idTreEm" hidden>
    <input asp-for="@Model.Nam" value="@DateTime.Now.Year" hidden>
    <input asp-for="@Model.Thang" value="@DateTime.Now.Month" hidden>
    <div class="mb-3">
        <label asp-for="@Model.LoiNhanXet" class="form-label"></label>
        <textarea class="form-control" asp-for="@Model.LoiNhanXet" style="height: 100px"></textarea>
        @Html.ValidationMessageFor(m => m.LoiNhanXet, "", new { @class = "text-danger" })
    </div>

    <div class="mt-3">
        <button class="btn btn-primary">Lưu</button>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

