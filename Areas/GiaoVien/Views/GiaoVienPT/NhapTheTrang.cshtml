@model QLPreschool.ModelViews.TheTrangMV
@{
    ViewData["Title"] = "Nhập Thể Trạng";
}

<h3 class="text-center text-capitalize">Nhập Thể Trạng cho bé tháng @DateTime.Now.Month - năm @DateTime.Now.Year</h3>

<form class="container-fluid pt-4 px-4"  method="post"
      asp-action="NhapTheTrang" asp-controller="GiaoVienPT" asp-area="GiaoVien">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="@Model.MaTe" value="@ViewBag.idTreEm" hidden>
    <input asp-for="@Model.Nam" value="@DateTime.Now.Year" hidden>
    <input asp-for="@Model.Thang" value="@DateTime.Now.Month" hidden>
    <div class="mb-3">
        <label asp-for="@Model.ChieuCao" class="form-label"></label>
        <input asp-for="@Model.ChieuCao" class="form-control" type="number">
        @Html.ValidationMessageFor(m => m.ChieuCao, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="@Model.CanNang" class="form-label"></label>
        <input asp-for="@Model.CanNang" class="form-control" type="number">
        @Html.ValidationMessageFor(m => m.CanNang, "", new { @class = "text-danger" })
    </div>
    
    <div class="mt-3">
        <button class="btn btn-primary">Lưu</button>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

