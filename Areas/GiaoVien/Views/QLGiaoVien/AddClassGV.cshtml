@model QLPreschool.Data.Lop
@{
    ViewData["Title"] = "Thêm lớp phụ trách";
}
<form class="container-fluid pt-4 px-4" method="post" asp-route-idGv="@ViewBag.idGV" asp-action="AddClassGV" asp-controller="QLGiaoVien" asp-area="GiaoVien">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="@Model.TenLop" class="form-label"></label>
        <input asp-for="@Model.TenLop" class="form-control">
        @Html.ValidationMessageFor(m => m.TenLop, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="@Model.SiSo" class="form-label"></label>
        <input asp-for="@Model.SiSo" class="form-control">
        @Html.ValidationMessageFor(m => m.SiSo, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label>Loại lớp</label>
        @Html.DropDownList("MaLoai", ViewBag.loaiLop as SelectList, "Chọn một danh mục", new { @class = "form-select" })

    </div>
    <div class="mb-3">
        <label>Phòng học</label>
        @Html.DropDownList("MaPhong", ViewBag.phongHoc as SelectList, "Chọn một danh mục", new {
            @class = "form-select" })
        @Html.ValidationMessageFor(m => m.MaPhong, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3 d-flex align-items-center">
        <div>
            <label>Năm học</label>
            @Html.DropDownList("NamHoc", ViewBag.nmHk as SelectList, "Chọn một năm học", new {
                    @class = "form-select",
                    @required=true
                })
        </div>
        <div class="mx-5">
            <label>Chọn học kỳ</label>
            <div class="d-flex align-items-center">

                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" required name="HocKi" id="inlineRadio1" value="1">
                    <label class="form-check-label" for="inlineRadio1">1</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" required name="HocKi" id="inlineRadio2" value="2">
                    <label class="form-check-label" for="inlineRadio2">2</label>
                </div>
            </div>
        </div>
        
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Lưu</button>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}