@model QLPreschool.ModelViews.GiaoVienMV
@{
    ViewData["Title"] = "Thêm giáo viên";
}
<h2 class="text-secondary">Thêm giáo viên mới</h2>
<form class="container-fluid pt-4 px-4" enctype="multipart/form-data" method="post" 
asp-action="AddGV" asp-controller="QLGiaoVien" asp-area="GiaoVien">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="@Model.TenGV" class="form-label"></label>
        <input asp-for="@Model.TenGV" class="form-control">
        @Html.ValidationMessageFor(m => m.TenGV, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <div class="mb-2">Giới Tính</div>
        <input asp-for="@Model.GioiTinh" type="radio" value="true" class="form-check-input"> <label class="form-check-label" for="flexRadioDefault1">
            Nam
        </label>
        <input asp-for="@Model.GioiTinh" type="radio" value="false" class="form-check-input ms-4"> <label class="form-check-label" for="flexRadioDefault1">
            Nữ
        </label>
        @Html.ValidationMessageFor(m => m.GioiTinh, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="@Model.DiaChi" class="form-label"></label>
        <textarea asp-for="@Model.DiaChi" class="form-control" style="height: 100px"></textarea>
        @Html.ValidationMessageFor(m => m.DiaChi, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ChucVu" class="form-label"></label>
        <input asp-for="@Model.ChucVu" class="form-control">
        @Html.ValidationMessageFor(m => m.ChucVu, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="@Model.SDT" class="form-label"></label>
        <input asp-for="@Model.SDT" class="form-control">
        @Html.ValidationMessageFor(m => m.SDT, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="@Model.AvatarGV" class="form-label"></label>
        <input asp-for="@Model.AvatarGV" class="form-control">
        @Html.ValidationMessageFor(m => m.AvatarGV, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Email" class="form-label"></label>
        <input asp-for="@Model.Email" class="form-control">
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="@Model.MatKhau" class="form-label"></label>
        <input asp-for="@Model.MatKhau" class="form-control">
        @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
    </div>
    <div class="mt-3 d-flex align-items-center gap-3">
        <button class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-primary">Quay Về</a>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}