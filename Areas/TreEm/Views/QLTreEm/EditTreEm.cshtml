@model QLPreschool.ModelViews.TTTreEmMV
@{
    ViewData["Title"] = "Chỉnh sửa thông tin trẻ em";
}
<h2 class="text-secondary text-capitalize">@ViewData["Title"]</h2>
<form class="container-fluid pt-4 px-4" enctype="multipart/form-data" method="post"
      asp-action="EditTreEm" asp-controller="QLTreEm" asp-area="TreEm" asp-route-idTreEm="@ViewBag.idTreEm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="@Model.TenTe" class="form-label"></label>
        <input asp-for="@Model.TenTe" class="form-control">
        @Html.ValidationMessageFor(m => m.TenTe, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <div class="mb-2">Giới Tính</div>
        <input asp-for="@Model.GioiTinh" type="radio" value="true" class="form-check-input"> <label class="form-check-label" for="flexRadioDefault1">
            Nam
        </label>
        <input asp-for="@Model.GioiTinh" type="radio" value="false" class="form-check-input ms-4"> <label class="form-check-label" for="flexRadioDefault1">
            Nữ
        </label>
        @Html.ValidationMessageFor(m => m.GioiTinh, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="@Model.NgaySinhTE" class="form-label"></label>
        <input asp-for="@Model.NgaySinhTE" class="form-control" type="date">
        @Html.ValidationMessageFor(m => m.NgaySinhTE, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="@Model.AvatarTE" class="form-label"></label>
        <input asp-for="@Model.AvatarTE" class="form-control">
        <img src="~/AdminDashboard/img/TreEm/@ViewBag.oldImg" alt="Hinh anh" width="150"/>
        @Html.ValidationMessageFor(m => m.AvatarTE, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="@Model.TenPh" class="form-label"></label>
        <input asp-for="@Model.TenPh" class="form-control">
        @Html.ValidationMessageFor(m => m.TenPh, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="@Model.DiaChiPh" class="form-label"></label>
        <textarea asp-for="@Model.DiaChiPh" class="form-control" style="height: 100px"></textarea>
        @Html.ValidationMessageFor(m => m.DiaChiPh, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="@Model.SdtPhuhuynh" class="form-label"></label>
        <input asp-for="@Model.SdtPhuhuynh" class="form-control">
        @Html.ValidationMessageFor(m => m.SdtPhuhuynh, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="@Model.NgaySinhPh" class="form-label"></label>
        <input asp-for="@Model.NgaySinhPh" class="form-control" type="date">
        @Html.ValidationMessageFor(m => m.NgaySinhPh, "", new { @class = "text-danger" })
    </div>
    <div class="mt-3 d-flex align-items-center gap-3">
        <button class="btn btn-primary">Lưu</button>
        <a asp-action="DetailTreEm" asp-route-idTreEm="@ViewBag.idTreEm" class="btn btn-primary">Quay về</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}