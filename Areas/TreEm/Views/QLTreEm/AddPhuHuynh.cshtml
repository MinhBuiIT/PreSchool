@model QLPreschool.ModelViews.PhuHuynhMV
@{
    ViewData["Title"] = "Thêm phụ huynh";
}
<h2 class="text-secondary text-capitalize">Thêm phụ huynh mới</h2>
<form class="container-fluid pt-4 px-4" enctype="multipart/form-data" method="post"
      asp-action="AddPhuHuynh" asp-controller="QLTreEm" asp-area="TreEm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="@Model.TenPh" class="form-label"></label>
        <input asp-for="@Model.TenPh" class="form-control">
        @Html.ValidationMessageFor(m => m.TenPh, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <div class="mb-2">Giới Tính</div>
        <input asp-for="@Model.GioiTinh" type="radio" value="true" class="form-check-input"> <label class="form-check-label" for="flexRadioDefault1">
            Nam
        </label>
        <input asp-for="@Model.GioiTinh" type="radio" value="false" class="form-check-input ms-4"> <label class="form-check-label" for="flexRadioDefault1">
            Nữ
        </label>
        @Html.ValidationMessageFor(m => m.GioiTinh, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="@Model.DiaChiPh" class="form-label"></label>
        <textarea asp-for="@Model.DiaChiPh" class="form-control" style="height: 100px"></textarea>
        @Html.ValidationMessageFor(m => m.DiaChiPh, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="@Model.NgaySinh" class="form-label"></label>
        <input asp-for="@Model.NgaySinh" type="date" class="form-control">
        @Html.ValidationMessageFor(m => m.NgaySinh, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="@Model.SdtPhuhuynh" class="form-label"></label>
        <input asp-for="@Model.SdtPhuhuynh" class="form-control">
        @Html.ValidationMessageFor(m => m.SdtPhuhuynh, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Email" class="form-label"></label>
        <input asp-for="@Model.Email" class="form-control">
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="@Model.MatKhau" class="form-label"></label>
        <input asp-for="@Model.MatKhau" class="form-control">
        @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
    </div>
    <div class="mt-3 d-flex align-items-center gap-3">
        <button class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-primary">Quay về</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
