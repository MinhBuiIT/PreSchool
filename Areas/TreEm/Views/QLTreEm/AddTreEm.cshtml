@model QLPreschool.ModelViews.TreEmMV
@{
    ViewData["Title"] = "Thêm trẻ em";
}
<h2 class="text-secondary">Thêm trẻ em mới</h2>
<partial name="_StatusMessage" />
<form class="container-fluid pt-4 px-4" enctype="multipart/form-data" method="post"
      asp-action="AddTreEm" asp-controller="QLTreEm" asp-area="TreEm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input value="@ViewBag.idPh" asp-for="@Model.idPh" hidden />
    <div class="mb-3">
        <label asp-for="@Model.TenTe" class="form-label"></label>
        <input asp-for="@Model.TenTe" class="form-control">
        @Html.ValidationMessageFor(m => m.TenTe, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <div class="mb-2">Giới Tính</div>
        <input asp-for="@Model.GioiTinh" type="radio" value="true" class="form-check-input"> <label class="form-check-label" for="flexRadioDefault1">
            Nam
        </label>
        <input asp-for="@Model.GioiTinh" type="radio" value="false" class="form-check-input ms-4"> <label class="form-check-label" for="flexRadioDefault1">
            Nữ
        </label>
        <div>@Html.ValidationMessageFor(m => m.GioiTinh, "", new { @class = "text-danger" })</div>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.NgaySinhTE" class="form-label"></label>
        <input asp-for="@Model.NgaySinhTE" class="form-control" type="date"/>
        @Html.ValidationMessageFor(m => m.NgaySinhTE, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label asp-for="@Model.AvatarTE" class="form-label"></label>
        <input asp-for="@Model.AvatarTE" class="form-control">
        @Html.ValidationMessageFor(m => m.AvatarTE, "", new { @class = "text-danger" })
    </div>
    <div class="mt-3">
        <button class="btn btn-primary">Lưu</button>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
